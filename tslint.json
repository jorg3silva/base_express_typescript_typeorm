{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier",
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "ter-indent": [
            true,
            4,
            { "SwitchCase": 1 }
        ],
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "member-variable-declaration"
        ],
        "no-consecutive-blank-lines": [true, 4],
        "max-line-length": [true, 160]
    },
    "rulesDirectory": []
}
